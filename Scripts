/* By running this file the database is completely deleted and recreated.
*/

-- Create Database 'DataProject'

USE master;
GO 

-- Drop and recreate the DataProject database 
IF EXISTS (SELECT 1 FROM sys.databases WHERE name = 'DataProject')
BEGIN 
	ALTER DATABASE DataProject SET SINGLE_USER WITH ROLLBACK IMMEDIATE;
	DROP DATABASE DataProject;
END;
GO

CREATE DATABASE DataProject;
GO

USE DataProject;
GO

CREATE SCHEMA bronze;
GO
CREATE SCHEMA silver;
GO
CREATE SCHEMA gold;
GO
